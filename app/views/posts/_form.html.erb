<%= form_for @post do |f| %>
<div class="container">
  <div class="form-group">
    <div class="col">
      <%= f.label :title%>
      <%= f.text_field :title,{class: 'form-control',style: ''}%>
    </div>
  </div>

  <div class="form-group">
    <div class="col">
      <%= f.label :text%>
      <%= f.text_area :text,{class: 'form-control',style: ''}%>
    </div>
  </div>
  <div class="form-group">
    <div class="col">
      <%= f.label :category_id%>
      <%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] },{},{class: 'form-control',style: 'width:20%'}%>
    </div>
  </div>
  <div class="">
    <div class="col">
      <%= f.submit 'Submit', class: 'btn btn-primary'%>
    </div>
  </div>
</div>
<% end %>
